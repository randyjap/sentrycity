<div class="container-fluid py-5 px-lg-5">
  <div class="row">
    <div class="col-lg-3 pt-3">
      <form action="#" class="pr-xl-3">
        <div class="mb-4">
          <label for="form_search" class="form-label">Store</label>
          <div class="input-label-absolute input-label-absolute-right">
            <div class="label-absolute"><i class="fa fa-search"></i></div>
            <input type="search" name="search" placeholder="Name" id="form_search" class="form-control pr-4">
          </div>
        </div>
        <div class="mb-4">
          <label for="form_neighbourhood" class="form-label">Districts</label>
          <select name="neighbourhood" id="form_neighbourhood" multiple data-style="btn-selectpicker" data-live-search="true" data-selected-text-format="count &gt; 1" title="" class="selectpicker form-control">
            <option selected value="neighbourhood_00">All Districts</option>
            <% District.all.each do |district| %>
              <option value="<%= district.name %>"><%= district.name %></option>
            <% end %>
          </select>
        </div>
        <div class="mb-4">
          <label class="form-label">Goods</label>
          <ul class="list-unstyled mb-0">
            <% Tag.all.each do |tag| %>
              <li>
                <div class="custom-control custom-checkbox">
                  <input checked type="checkbox" id="<%= "${tag.name}_type" %>" name="type[]" class="custom-control-input">
                  <label for="<%= "${tag.name}_type" %>" class="custom-control-label"><%= tag.name %></label>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
        <div class="mb-4">
          <label class="form-label">Sale</label>
          <ul class="list-unstyled mb-0">
            <li>
              <div class="custom-control custom-checkbox">
                <input checked type="checkbox" id="cuisine_0" name="cuisine[]" class="custom-control-input">
                <label for="cuisine_0" class="custom-control-label">Farewell</label>
              </div>
            </li>
            <li>
              <div class="custom-control custom-checkbox">
                <input checked type="checkbox" id="cuisine_1" name="cuisine[]" class="custom-control-input">
                <label for="cuisine_1" class="custom-control-label">Grand Opening</label>
              </div>
            </li>
          </ul>
        </div>
        <div class="mb-4">
          <button type="submit" class="btn btn-primary"> <i class="fas fa-search mr-1"></i>Kazaam</button>
        </div>
      </form>
    </div>
    <div class="col-lg-9">
      <% District.all.each do |district| %>
        <% next if district.stores.empty? %>
        <!-- Slider main container-->
        <h1 class="display-5 font-weight-bold text-serif"><%= district.name %></h1>
        <p class="mb-3 mb-md-0"><strong><%= district.stores.size %></strong> results found</p>
        <div data-swiper="{&quot;slidesPerView&quot;:3,&quot;spaceBetween&quot;:20,&quot;loop&quot;:true,&quot;roundLengths&quot;:true,&quot;breakpoints&quot;:{&quot;1200&quot;:{&quot;slidesPerView&quot;:3},&quot;991&quot;:{&quot;slidesPerView&quot;:2},&quot;565&quot;:{&quot;slidesPerView&quot;:1}},&quot;pagination&quot;:{&quot;el&quot;:&quot;.swiper-pagination&quot;,&quot;clickable&quot;:true,&quot;dynamicBullets&quot;:true}}" class="swiper-container swiper-container-mx-negative swiper-init">
          <!-- Additional required wrapper-->
          <div class="swiper-wrapper pb-5">
            <!-- Slides-->
            <% district.stores.each do |store| %>
              <div class="swiper-slide h-auto px-2">
                <div data-marker-id="<%= store.id.hash %>" class="w-100 h-100">
                  <div class="card h-100 border-0 shadow">
                    <div class="ribbon ribbon-secondary"><%= store.discount %>% Off Sale</div>
                    <div class="card-img-top overflow-hidden gradient-overlay"><%= image_tag(store.photos.first, class: "img-fluid") %><%= link_to("", store, class: "tile-link") %>
                    <div class="card-img-overlay-bottom z-index-20 text-white text-m text-right"><%= store.vote_count_message %> - <%= store.comment_count_message %></div>
                  </div>
                  <div class="card-body d-flex align-items-center">
                    <div class="w-100">
                      <h6 class="card-title"><%= link_to(store.name, store, class: "text-decoration-none text-dark") %></h6>
                      <div class="d-flex card-subtitle mb-3">
                        <p class="flex-grow-1 mb-0 text-muted text-sm"><i class="fa-map-marker-alt fas mr-2"></i><%= store.address %></p>
                      </div>
                      <p class="card-text h6 text-primary"><%= distance_of_time_in_words_to_now(store.event_date) %> left!</p>
                    </div>
                  </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <!-- If we need pagination-->
          <div class="swiper-pagination"></div>
        </div>
        <!-- Slider main container-->
      <% end %>
      <!-- Slider main container-->
      <h1 class="display-5 font-weight-bold text-serif">Wan Chai Stores</h1>
      <p class="mb-3 mb-md-0"><strong>12</strong> results found</p>
      <div data-swiper="{&quot;slidesPerView&quot;:3,&quot;spaceBetween&quot;:20,&quot;loop&quot;:true,&quot;roundLengths&quot;:true,&quot;breakpoints&quot;:{&quot;1200&quot;:{&quot;slidesPerView&quot;:3},&quot;991&quot;:{&quot;slidesPerView&quot;:2},&quot;565&quot;:{&quot;slidesPerView&quot;:1}},&quot;pagination&quot;:{&quot;el&quot;:&quot;.swiper-pagination&quot;,&quot;clickable&quot;:true,&quot;dynamicBullets&quot;:true}}" class="swiper-container swiper-container-mx-negative swiper-init">
        <!-- Additional required wrapper-->
        <div class="swiper-wrapper pb-5">
          <!-- Slides-->
          <% @stores.each do |store| %>
            <div class="swiper-slide h-auto px-2">
              <div data-marker-id="<%= store.id.hash %>" class="w-100 h-100">
                <div class="card h-100 border-0 shadow">
                  <div class="ribbon ribbon-secondary"><%= store.discount %>% Off Sale</div>
                  <div class="card-img-top overflow-hidden gradient-overlay"><%= image_tag(store.photos.first, class: "img-fluid") %><%= link_to("", store, class: "tile-link") %>
                  <div class="card-img-overlay-bottom z-index-20 text-white text-m text-right"><%= store.vote_count_message %> - <%= store.comment_count_message %></div>
                </div>
                <div class="card-body d-flex align-items-center">
                  <div class="w-100">
                    <h6 class="card-title"><%= link_to(store.name, store, class: "text-decoration-none text-dark") %></h6>
                    <div class="d-flex card-subtitle mb-3">
                      <p class="flex-grow-1 mb-0 text-muted text-sm"><i class="fa-map-marker-alt fas mr-2"></i><%= store.address %></p>
                    </div>
                    <p class="card-text h6 text-primary"><%= distance_of_time_in_words_to_now(store.event_date) %> left!</p>
                  </div>
                </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <!-- If we need pagination-->
        <div class="swiper-pagination"></div>
      </div>
      <!-- Slider main container-->
    </div>
  </div>
</div>

<%= render "shared/footer" %>