<div class="container-fluid px-3">
  <div class="row min-vh-100">
    <div class="col-md-8 col-lg-6 col-xl-5 d-flex align-items-center">
      <div class="w-100 py-5 px-md-5 px-xl-6 position-relative">
        <div class="mb-5"><img src="<%= asset_path('logo-square.svg') %>" alt="SentryCity Logo" style="max-width: 4rem;" class="img-fluid mb-3">
          <h2><%= t('.change_your_password') %></h2>
        </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-validate", method: :put }) do |f| %>

          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.label :password, t('.new_password'), class: "form-label" %><br />
            <% if @minimum_password_length %>
              <em>(<%= "#{@minimum_password_length} #{t('.minimum_characters')}" %>)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group mb-4">
            <%= f.label :password_confirmation, t('.confirm_password'), class: "form-label" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

          <%= f.submit t('.change_password'), class: "btn btn-lg btn-block btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-4 col-lg-6 col-xl-7 d-none d-md-block">
      <!-- Image-->
      <div style="background-image: url(<%= asset_path('forest-coast.jpg') %>);" class="bg-cover h-100 mr-n3"></div>
    </div>
  </div>
</div>