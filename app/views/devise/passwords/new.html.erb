<div class="container-fluid px-3">
  <div class="row min-vh-100">
    <div class="col-md-8 col-lg-6 col-xl-5 d-flex align-items-center">
      <div class="w-100 py-5 px-md-5 px-xl-6 position-relative">
        <div class="mb-5"><img src="<%= asset_path('logo-square.svg') %>" alt="SentryCity Logo" style="max-width: 4rem;" class="img-fluid mb-3">
          <h2><%= t('.forgot_password') %></h2>
        </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-validate", method: :post }) do |f| %>
          <div class="form-group">
            <%= f.label :email, t('.email'), class: "form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "new-email", class: "form-control" %>
          </div>

          <%= f.submit t('.send_password_instructions'), class: "btn btn-lg btn-block btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-4 col-lg-6 col-xl-7 d-none d-md-block">
      <!-- Image-->
      <div style="background-image: url(<%= asset_path('forest-coast.jpg') %>);" class="bg-cover h-100 mr-n3"></div>
    </div>
  </div>
</div>